.new.button
	= link_to image_tag( 'add.png', :width => 20 ), new_<%= singular_name %>_path
	= link_to 'New <%= singular_name.capitalize %>', new_<%= singular_name %>_path

%h1 <%= plural_name.capitalize %> Admin 
%table.admin_table
	%thead
	<% for attribute in attributes -%>
%th <%= attribute.human_name %>
	<% end -%>
%th{ :colspan => 2 }
	%tbody
		- for <%= singular_name %> in @<%= plural_name %>
			%tr{ :class => cycle(:odd, :even) }
	<% for attribute in attributes -%>
		%td= <%= singular_name %>.<%= attribute.name %>
	<% end -%>
		%td
					= link_to image_tag( 'view.png', :width => 20 ), <%= singular_name %>
					= link_to 'view', <%= singular_name %>
				%td
					= link_to image_tag( 'edit.png', :width => 20 ), edit_<%= singular_name %>_path( <%= singular_name %> )
					= link_to 'edit', edit_<%= singular_name %>_path( <%= singular_name %> )
				%td
					= link_to image_tag( 'trash.png', :width => 20 ), <%= singular_name %>, :confirm => 'Are you sure?', :method => :delete
					= link_to 'delete', <%= singular_name %>, :confirm => 'Are you sure?', :method => :delete


