.form_group
	- unless @current_user.children.empty?
		= f.label "Assign To:"
		- for child in @current_user.children do
			= check_box_tag 'assign_to_ids[]', child.id, @objective.users.include?( child )
			= child.display_name
	
	= f.label 'Name:'
	= f.text_field :name

	= f.label 'Description:'
	= f.text_area :description, :class => 'small_area'
	%br
	
	= f.fields_for :objective_assignments do |assign_form|
	
		= assign_form.check_box :req_checkin#, :checked => @objective.req_checkin?
		Require Checkin?
		%span#confirmation_fields
			= assign_form.check_box :req_confirm#, :checked => @objective.req_confirm?
			Require Confirmation?

		#recurring_fields
			= assign_form.label 'Frequency:'
			= assign_form.text_field :times
			Times
			Per
			= assign_form.select :period, { 'Day' => 'day', 'Week' => 'week', 'Month' => 'month' }
			
		#one_time_fields
			= assign_form.label 'Due Date'
			= assign_form.text_field :due_at, :class => 'datepicker'
	
		= assign_form.label "Points:"
		= assign_form.text_field :points_value
	%br
	= f.submit "Add", :class => 'button'