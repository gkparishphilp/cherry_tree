.form_group
	- unless @current_user.children.empty?
		= f.label "Assign To:"
		- for child in @current_user.children do
			= check_box_tag 'assign_to_ids[]', child.id, @objective.users.include?( child )
			= child.display_name
	
	= f.label 'Name:'
	= f.text_field :name

	= f.label 'Description:'
	= f.text_area :description
	%br
	= f.check_box :req_checkin, :checked => @objective.req_checkin?
	Require Checkin?
	%span#confirmation_fields
		= f.check_box :req_confirm, :checked => @objective.req_confirm?
		Require Confirmation?
	%br
	= f.label 'Objective Type:'
	= f.select :objective_type, { 'Recurring' => 'recurring', 'One Time' => 'once' }

	#one_time_fields
		= f.label 'Due Date'
		= f.text_field :due_at, :class => 'datepicker'
	
	#recurring_fields
		= f.label 'Frequency:'
		= f.text_field :times
		Times
		Per
		= f.select :period, { 'Day' => 'day', 'Week' => 'week', 'Month' => 'month' }
	

	= f.label "Points:"
	= f.text_field :points
	%br
	= f.submit "Add", :class => 'button'