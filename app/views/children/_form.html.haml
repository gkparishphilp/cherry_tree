.form_group.add_child
	%label
		This child is a
	%br
	%div.roundy
		= f.radio_button :gender, 'male'
		boy
	%div.roundy
		= f.radio_button :gender, 'female'
		girl

	%div.clear
		
	%label
		%span.gender
		first name is
	= f.text_field :display_name

	%div.clear	

	%label.pic
		Upload a picture for
		%span.name
	= file_field_tag :attached_avatar_file
	%div.clear
	
	%label.birthday
		%span.name_owner
		birthday is
	
	= f.text_field :birthday, :class => 'birthday_field'

	%div.divider
	
	%label
		I am
		%span.name_owner
	= f.select :role, [ ['Mother', 'mother'], ['Father', 'father'], ['Guardian', 'guardian'], ['Professional', 'pro'] ]
	
	%div.clear

	%label.nickname
		%span.name
		calls me ____. (For example: Mommy, Dad, Gram)
	= f.text_field :nick
	%div.divider
	
	%label.login
		Please provide a unique login name for
		%span.name
	= f.text_field :name
	%span#name_availability
		&nbsp;

	%div.clear
	
	%label.password
		Please provide a PIN code or password for 
		%span.name
	= f.text_field :password

	%div.divider

	%label
		&nbsp;
	= f.submit "Add", :class => 'button_flat'
