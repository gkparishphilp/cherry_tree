-# Used to show Child to Parent
.child_profile.clearfix
	= render 'children/sub_nav', :child => @child
	
	
	#child_main_screen


		%h3 Activity Feed
		.timeline

		- if @activities.empty?
			=@child.name.capitalize
			hasn't performed any activities yet.  Encourage 
			=@child.name.capitalize
			to login!
		- else
			= render @activities


	#home_prizes.boxes
		%h3 Awards
		- if @child.award_assignments.empty? && @child.parents.include?( @current_user )
			%p
				= @child.name.capitalize
				has no awards, create one now!
			
			= link_to "+ Create Award", "#", :class => 'open_modal button_flat', :id => 'award'
			
		- for assignment in @child.award_assignments
			.item
				- if @current_user == @child
					= link_to avatar_tag( assignment.award, :thumb, :width => 64 ), unlock_award_path( assignment.award, :type => 'award' ) 
				- else
					= avatar_tag( assignment.award, :thumb, :width => 64 )
				%br
				%b= assignment.award.name
				.cost
					Cost:
					= assignment.point_cost
					pts.
	#home_news.boxes
		%h3 Objectives
		- if @child.objective_assignments.empty? && @child.parents.include?( @current_user )
			= @child.name.capitalize
			has no objectives, create one now!
			%br
			%br
			= link_to "+ Create Objective", "#", :class => 'open_modal button_flat', :id => 'objective'		
		- else
			- for assignment in @child.objective_assignments
				%p
					= assignment.objective.name
		
	#new_objective.modal{ :title => "New Objective for #{@child.display_name}"}
		%h2
			New Objective for
			= @child.display_name

		= form_for [ @child, ObjectiveAssignment.new ] do |f|
			= render 'objective_assignments/form', :f => f
	
	
	#new_award.modal{ :title => "New Award for #{@child.display_name}" }
		= form_for [ @child, AwardAssignment.new ] do |f|
			= render 'award_assignments/award_form', :f => f



