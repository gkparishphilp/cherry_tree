#hd
	.wrapper
		= link_to "Seedz Awesome Logo", root_path, :class => 'logo'
		%ul.top_user_menu
			- if @current_user.anonymous?
				%li.user
					= link_to image_tag( "/images/anonymous_avatar.png", :width => 20 ), "", :class => 'avatar'
					= link_to "Login", login_path, :class=>'username'
				%li= link_to "Register", register_path
			- else
				%li.user
					= link_to avatar_tag( @current_user, :tiny, :width => 20 ), user_path( @current_user ), :class => 'avatar'
					= link_to @current_user.name, user_path( @current_user ), :class => 'username'
				%li= link_to "Logout", logout_path