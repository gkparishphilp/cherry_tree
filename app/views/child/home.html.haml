#child_main_screen
	.boxes
		-if @assignments.present?
			%h3
				Did you?
			= render @assignments #render @relevant_assignment 
		-else
			%h3
				Great Job!  
			%h4
				You've met all your goals for today! Come back tomorrow to earn more cherries.
	
	-# unless @current_user.activities.empty?
		#home_activity.boxes
			%h3
				News
			.activity
				= render @current_user.activities.order("created_at desc")
	%br
	%br
	
	.boxes
		- unless @lesson_assignments.empty?
			%h3 Activities

			%table( width = 500 )
				%th
					%b Name
				%th
					%b Cherries
				%th
					%b Action
				- for lesson_assignment in @lesson_assignments
					%tr
						%td
							= lesson_assignment.lesson.name
						%td
							= lesson_assignment.lesson.quizzes.first.point_value
						%td
							- if lesson_assignment.lesson.quizzes.first.taken_by?( @current_user )
								Completed
							- else
								= link_to "Take It", lesson_screen_path( lesson_assignment.lesson, lesson_assignment.lesson.screens.first )
	%br
	%br

= render 'child/right_column'




