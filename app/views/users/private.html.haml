- content_for :left_column do
	%h1
		= @user.name
		Home

	#tabs
		%ul
			%li= link_to "Welcome", "#welcome"
			%li= link_to "Children / Teams", "#children"
			%li= link_to "Objectives / Awards", "#objectives" unless @current_user.children.empty?
			%li= link_to "Kudos", '#kudos'
			%li= link_to "Settings", "#settings"
		#welcome
			%p
				Welcome to our prototype.  This is still very much a work in progress, but should give a feel for what we're trying to do.  Have fun!
			%p
				First, add a child or two with the child tab
			%p
				Then, you can send them kudos and messages
			%p
				More to come later...
		#children
			- unless @current_user.children.empty?
				%h3 Your Children
				- for child in @current_user.children
					= child.name
					%br
			
			- unless @current_user.supported_children.empty?
				%h3 Children You Support
				- for child in @current_user.supported_children
					= child.name
					%br
				
			%h3 Add a Child
			= form_for Child.new do |f|
				= render 'children/form', :f => f
			
			- unless @current_user.children.empty?
				%h3 Invite Team Members
				= form_for Relation.new do |f|
					= f.label "For:"
					= f.collection_select :child_id, @current_user.children, :id, :name
					= f.label "Role:"
					= f.select :role, %w( mother father grandmother grandfather aunt uncle friend )
					= f.label "Name:"
					= f.text_field :name
					= f.label "Email:"
					= f.text_field :email
					= f.submit "Invite", :class => :button

		#settings
			.column2
				%h3 Change Your Picture
				= avatar_tag( @user, :thumb )
			.column1
				= form_for @user, :html => { :multipart => true } do |f|
					= file_field_tag :attached_avatar_file
					= submit_tag "Update Picture", :class => 'button'
			.divider
			.column2
				%h3 Change Your Email
				= @user.email
			.column1
				= form_for @user do |f|
					= f.text_field :email
					= f.submit "Enter", :class => 'button'
			.divider
			.column2
				%h3 Update Password
			.column1
				= form_tag reset_path do
					%label New Password:
					= password_field_tag :password, params[:password], :size=>30, :class=>"password"
					%label Confirm Password:
					= password_field_tag :password_confirmation, params[:password_confirmation], :size=>30, :class=>"password"
					= hidden_field_tag :token, @user.remember_token
					= submit_tag "Change Password", :class => 'button'
			.clear
		#kudos
			%h3 Send Kudos
			= form_for Message.new do |f|
				= render 'messages/form', :f => f
		
		- unless @current_user.children.empty?
			#objectives
				%h3 Create an Objective
				= form_for @objective do |f|
					= render 'objectives/form', :f => f
				
				%h3 Add a prize from Amazon
				= form_tag amazon_path do 
					%label Search Amazon:
					= text_field_tag :search_term
					= submit_tag "Search", :class => 'button'


- content_for :right_column do
	%h3
		Add a Twitter Accoount:
	#twitter
		= form_tag go_twitter_sessions_path do
			= image_submit_tag 'twitter_button.png'
	%h3
		Add a Facebook Account:
	#facebook
		= form_tag go_facebook_sessions_path do
			= image_submit_tag 'facebook_connect.png'
	%h3
		Activity
	= render @activities
	
	