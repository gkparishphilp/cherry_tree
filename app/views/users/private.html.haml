- content_for :left_column do
	%h1
		= @user.name
		Home

	#tabs
		%ul
			%li= link_to "Welcome", "#welcome"
			%li= link_to "Settings", "#settings"
			%li= link_to "Children", "#children"
			%li= link_to "New Child", new_child_path
		#welcome
			Welcome to our prototype.  This is still very much a work in progress, but should give a feel for what we're trying to do.  Have fun!
		#children
			.column2
				%h3 Your Children
				- for child in @current_user.children
					= child.name
					%br
			.column1
				%h3 Add a Child
				= form_for Child.new do |f|
					This child is a
					= f.radio_button :gender, 'male'
					boy
					= f.radio_button :gender, 'female'
					girl
					%br
					%span.gender
					birthday is
					= f.text_field :birthday, :class => 'birthday_field'
					%br
					%span.gender
						&nbsp;
					name is
					= f.text_field :name
					%br
					I am
					%span.name 
						&nbsp
					= f.select :role, [ ['Father', 'father'], ['Mother', 'mother'], ['Guardian', 'guardian'], ['Professional', 'pro'] ]
					%br
					PIN:
					= f.text_field :pin
					%br
					= f.submit "Add", :class => 'button'
			.clear
		#settings
			.column2
				%h3 Change Your Picture
				= avatar_tag( @user, :thumb )
			.column1
				= form_for @user, :html => { :multipart => true } do |f|
					= file_field_tag :attached_avatar_file
					= submit_tag "Update Picture", :class => 'button'
			.divider
			.column2
				%h3 Change Your Email
				= @user.email
			.column1
				= form_for @user do |f|
					= f.text_field :email
					= f.submit "Enter", :class => 'button'
			.divider
			.column2
				%h3 Update Password
			.column1
				= form_tag reset_path do
					%label New Password:
					= password_field_tag :password, params[:password], :size=>30, :class=>"password"
					%label Confirm Password:
					= password_field_tag :password_confirmation, params[:password_confirmation], :size=>30, :class=>"password"
					= hidden_field_tag :token, @user.remember_token
					= submit_tag "Change Password", :class => 'button'
			.clear
			


	

- content_for :right_column do
	%h3
		Add a Twitter Accoount:
	#twitter
		= form_tag go_twitter_sessions_path do
			= image_submit_tag 'twitter_button.png'
	%h3
		Add a Facebook Account:
	#facebook
		= form_tag go_facebook_sessions_path do
			= image_submit_tag 'facebook_connect.png'
	%h3
		Activity
	= render @activities
	
	