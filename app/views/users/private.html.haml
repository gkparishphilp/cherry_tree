- content_for :left_column do
	%h1
		= @user.name
		Home
	- if @welcome_message
		%h3= @welcome_message
	%hr
	= link_to "I'm an Author!", new_author_path
	%br
	%br
	- if @user.avatar
		= image_tag @user.avatar.location, :width => 64
	= form_tag update_avatar_user_path( @user ), { :multipart => true } do |f|
		= file_field_tag :attached_avatar_file
		%br
		= submit_tag "Update picture"

	- unless @current_user.has_email?
		= form_for @current_user do |f|
			= f.label "Email"
			= f.text_field :email
			= f.submit "Enter"


	

- content_for :right_column do
	%h3
		Add a Twitter Accoount:
	#twitter
		= form_tag go_twitter_sessions_path do
			= image_submit_tag 'twitter_button.png'
	%h3
		Add a Facebook Account:
	#facebook
		= form_tag go_facebook_sessions_path do
			= image_submit_tag 'facebook_connect.png'
	%h3
		Activity
	= render @activities
	
	