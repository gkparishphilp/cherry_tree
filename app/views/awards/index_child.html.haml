-# The Treasure Chest

- unless @award_assignments.empty?
	#awards
		%h3 Pick a prize!

		- for assignment in @award_assignments.active
			.treasure_item
				= link_to avatar_tag( assignment.award, :thumb, :width => 64 ), unlock_award_path( assignment.award, :type => 'award' )
				%br
				= assignment.award.name
				.cost
					Cost:
					= assignment.point_cost
					pts.
				%br
				= link_to "Unlock It!", unlock_award_path( assignment.award, :type => 'award' )
		%br.clear
