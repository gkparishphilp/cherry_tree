%h1 Add Rewards
= render 'users/nav'
%br
%h3 Add an reward from Amazon
=render 'awards/amazon_form'

#wishitems
	-for child in @current_user.children
		%h3 
			Add an reward from  
			= possessize child.display_name
			Wishlist items
	
		.form_group
			= form_for @award=Award.new, :html => { :multipart => true } do |f|

				%br
				= f.submit "Enter", :class => 'button'