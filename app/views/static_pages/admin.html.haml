%h1 
	Static Pages Admin

.new_button
	= link_to image_tag( 'add.png', :width => 16 ), new_static_page_url
	=link_to 'New', new_static_page_url

%br
%br
#pages
%h3 Pages
%table
	%thead
		%tr
			%th Title
			%th Description
			%th Permalink

	%tbody
		-@pages.each do |static_page|
			%tr
				%td= link_to static_page.title, static_page
				%td
					= snip static_page.description, 50
				%td
					= static_page.permalink

				%td
					= link_to image_tag( 'edit.png', :width => 20 ), edit_static_page_url( static_page )
					= link_to 'edit', edit_static_page_url( static_page )
				%td
					= link_to image_tag( 'trash.png', :width => 20 ), static_page, :confirm => 'Are you sure you want to delete this static_page?', :method => :delete
					= link_to 'delete', static_page, :confirm => 'Are you sure you want to delete this static_page?', :method => :delete
