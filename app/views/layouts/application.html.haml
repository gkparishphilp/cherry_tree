!!!strict
%html
	%head
		= render 'layouts/meta', :css => 'app'
		
		= javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.4.3/jquery.min.js','http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.6/jquery-ui.min.js', 'jquery.cookie', 'rails', 'application'
		
		= stylesheet_link_tag 'http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.6/themes/cupertino/jquery-ui.css'
		= stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Corben:bold&subset=latin'
		= stylesheet_link_tag 'app', :media => 'screen, projection, print'

		/[if IE]
			= stylesheet_link_tag 'ie.css', :media => 'screen, projection'

		

	%body
		-#
			#big_tree
				- if @current_user.anonymous?
					= image_tag 'big_tree.png'
				- else
					= link_to image_tag( 'big_tree.png' ), user_path( @current_user )
	#wrapper
		#container
			= render 'shared/award_messages', :award_message => flash[:award_message] if flash[:award_message]
			= render 'shared/app_header'
			#bd
				#loading_div( style='position: absolute; top: 0; left: 0; width:100%; height:100%; text-align: center; background: #fff; z-index: 99;' )
					%h1( style='margin-top:150px;' ) Loading.....
					= image_tag 'spinner.gif'
					
				= render 'shared/flash', :flash => flash
				#content	
					- unless @current_user.anonymous? || controller_name == 'sessions' || controller_name == 'blog' || controller_name == 'forums' || controller_name == 'topics' || controller_name == 'posts' || controller_name == 'static_pages'
						- if @current_user.is_child?
							= render 'child/nav'
						- else
							= render 'adult/nav'
					= yield
					%br.clear
			= render 'shared/footer'
			= render 'shared/analytics'
			:javascript
				// This should hide the loading_div when the page is ready
				$(document).ready(function(){
					$('#loading_div').hide();
				});
