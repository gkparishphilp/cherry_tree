-# Used to show the award asignments for a child to the Parent
	
%h1
	= possessize @current_user.name
	Children
= render 'users/nav'

%br
.child_profile

	= render 'children/child_sub_nav', :child => @child
	
	%h2
		= possessize @child.display_name
		Awards
		
	= link_to 'Create a New Reward', "#", :id => 'open_modal'
		
	= render @child.award_assignments
	
		
		
		
	#modal_form
		%h2
			New Award for
			= @child.display_name
	
		= form_for [ @child, @new_assignment ] do |f|
			= render 'form', :f => f


	
	#wishlist_sidebar
		%h3
			= possessize @child.display_name
			Wishlist
		= render @child.wishlists.first.wishlist_items

%br.clear
%br