.form_group
	%h1
		Hi
		= @user.name
		
	Let's get started.  Your email is 
	= @user.email
	
	Let's create a password for you.
	%br
	%br
		
	= form_tag reset_path do
		.fields 
		%label New Password:
		= password_field_tag :password, params[:password], :size=>30, :class=>"password"

		%br
		
		%label Confirm Password:
		= password_field_tag :password_confirmation, params[:password_confirmation], :size=>30, :class=>"password"
		= hidden_field_tag :invite_code, @invite_code 
		%br
		= submit_tag "Change Password", :class => 'button'

		
	-#		
		= form_for @user do |f|
			.fields

				= f.label :name, "User Name"
				= f.text_field :name, :class => :regular

				= f.label :password, "Password"
				= f.password_field :password, :class => :regular

				= f.label :password_confirmation, "Confirm Password"
				= f.password_field :password_confirmation, :class => :regular
				%br
				%br
				= f.submit 'Register', :class => "button"
				|
				= link_to 'Login', new_session_path
				|
				= link_to 'Cancel', root_path
