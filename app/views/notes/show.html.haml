.cork_board
	.note.detail
		.note_header
			%span
				%b
					From:
				= @note.sender.nickname( @current_user )
			-#
				%br
				%span
					%b
						Subject:
					= @note.subject
		.note_content
			= @note.content
		.actions
			= link_to 'Reply', new_note_path( :to => @note.sender.id, :subject => "Re:#{@note.subject}"), :class => 'button_flat'
			= link_to 'Delete', note_path( @note ), :method => :delete, :class => 'button_flat'