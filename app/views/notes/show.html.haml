.cork_board
	.note_detail
		.note_title
			= @note.subject
		.note_content
			From:
			= @note.sender.nickname( @current_user )
			%hr
			= @note.content
		.actions
			= link_to 'Reply', new_note_path( :to => @note.sender.id, :subject => "Re:#{@note.subject}"), :class => 'green_button'
			= link_to 'Delete', note_path( @note ), :method => :delete, :class => 'red_button'