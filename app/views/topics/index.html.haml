= paginate( @topics ).html_safe

%table.forum_list
	%thead
		%tr
			%th

			%th
				Views
			%th
				Posts
			%th
				Last Post
	%tbody
		- @topics.each do |topic|
			%tr
				%td
					.topic_title
						%b= link_to topic.title, forum_topic_link( topic )
					by
					= link_to topic.user.name, topic.user
				%td
					= topic.view_count
				%td
					= topic.posts.count
				%td
					- if topic.posts.last
						= link_to format_date(topic.posts.last.created_at), custom_post_path( @forum, topic, topic.posts.last )
						%br
						by
						= link_to topic.posts.last.user.name, topic.posts.last.user
					- else
						&#45;&#45;&#45
= paginate( @topics ).html_safe
				


